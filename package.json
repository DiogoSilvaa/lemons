{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "pnpm --filter ui ui:add",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "lint-staged": {
    "packages/ui/**/*.{js,jsx,tsx,ts}": [
      "eslint --cache"
    ],
    "apps/**/*.{js,jsx,tsx,ts}": [
      "eslint --cache"
    ],
    "**/*.{js,jsx,tsx,ts,css,less,scss,md}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "pnpm@8.6.10",
  "name": "lemons"
}
